<h1>Services</h1>

<%= form_tag "/accounts" do %>
  <%= label_tag "Mailgun" %>
  <%= hidden_field_tag 'name', "mailgun" %>
  <%= text_field_tag "api_key", @mailgun['api_key'] %>
  <%= submit_tag "Save", :class => 'button hot' %>
<% end %>

<%= form_tag "/accounts" do %>
  <%= label_tag "Pivotal" %>
  <%= hidden_field_tag 'name', "pivotal" %>
  <%= text_field_tag "api_key", @pivotal['api_key'] %>
  <%= submit_tag "Save", :class => 'button hot' %>
  <%= link_to "Initial Import (may take awhile)", "/pivotal/import"  %>
<% end %>

